    "prettier-plugin-tailwindcss": "^0.5.4",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.3",
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "plugins": [
      "prettier-plugin-svelte",
      "prettier-plugin-tailwindcss"
    ]
  }
